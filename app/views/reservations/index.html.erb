	</div>
	<div class = "row">
		<h4 id="pgtitle">PENDING RESERVATIONS</h4>
	</div>
	<div class="row">
		<% @reservations.each do |reservation| %>
	<%= reservation.id_number %>
	<%= reservation.last_name %>,
	<%= reservation.first_name %>
	<%= reservation.middle_initial %>.
	<%= reservation.year_level %>
	<%= reservation.course %>
	<%= reservation.status %>| 
	<%= link_to "Edit", edit_reservation_path(reservation.id) %>
	<%= link_to "Delete", reservation_path(reservation.id), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
<a href = "reservations.csv"><button type = "button" class = "btn btn-default btn-xs"> Extract </button></a>
